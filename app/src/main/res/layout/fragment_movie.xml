<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="course.project.com.kanpianbao.MovieFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical">
            <TextView
                android:id="@+id/user_title_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="今日推荐"
                android:background="#0080FF"
                android:textColor="#fff"
                android:textSize="24sp"/>
        </LinearLayout>




    <!-- TODO: Update blank fragment layout -->
    <course.project.com.kanpianbao.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/my_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/first_column"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_column"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >
            </LinearLayout>
<!--
            <LinearLayout
                android:id="@+id/third_column"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >
            </LinearLayout>
            -->
        </LinearLayout>
    </course.project.com.kanpianbao.MyScrollView>
    </LinearLayout>
</RelativeLayout>
